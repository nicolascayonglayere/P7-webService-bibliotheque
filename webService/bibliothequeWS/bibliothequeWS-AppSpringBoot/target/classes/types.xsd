<?xml version="1.0" encoding="UTF-8"?>
<schema targetNamespace="http://www.yogj.fr/biblioWS/types" elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:ybst="http://www.yogj.fr/biblioWS/types">

    <complexType name="Utilisateur">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="nom" type="string" minOccurs="1"></element>
    		<element name="prenom" type="string" minOccurs="1"></element>
    		<element name="pseudo" type="string" minOccurs="1"></element>
    		<element name="motDePasse" type="string" minOccurs="1"></element>
    		<element name="coordonnee" type="ybst:CoordonneeUtilisateur" minOccurs="1" maxOccurs="unbounded"></element>
    		<element name="emprunt" type="ybst:LivreEmprunt" minOccurs="1" maxOccurs="unbounded"></element>
    	</sequence>
    </complexType>

    <complexType name="CoordonneeUtilisateur">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="adresse" type="string" minOccurs="1"></element>
    		<element name="email" type="string" minOccurs="1"></element>
    		<element name="utilisateur" type="ybst:Utilisateur"></element>
    	</sequence>
    </complexType>

    <complexType name="LivreEmprunt">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="emprunteur" type="ybst:Utilisateur" minOccurs="1"></element>
    		<element name="ouvrage" type="ybst:Livre" minOccurs="1"></element>
    		<element name="dateEmprunt" type="date" minOccurs="1"></element>
    		<element name="prolongation" type="boolean" minOccurs="1"></element>
    	</sequence>
    </complexType>
    
    <complexType name="Livre">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="titre" type="string" minOccurs="1" maxOccurs="1"></element>
    		<element name="auteurs" type="ybst:Auteur" minOccurs="1" maxOccurs="unbounded"></element>
    		<element name="genre" minOccurs="1">
    			<simpleType>
    				<restriction base="string">
    					<enumeration value="ROMAN"></enumeration>
    					<enumeration value="SCIENCES_FICTION"></enumeration>
    					<enumeration value="HEROIC_FANTASY"></enumeration>
    				</restriction>
    			</simpleType>
    		</element>
    		<element name="date" type="date" minOccurs="1"></element>
    		<element name="editeurs" type="ybst:Editeur" minOccurs="1" maxOccurs="unbounded"></element>
    		<element name="nbExemplaire" type="int" minOccurs="1"></element>
    	</sequence>
    </complexType>
    
    <complexType name="Auteur">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="nom" type="string" minOccurs="0" maxOccurs="unbounded"></element>
    		<element name="prenom" type="string" minOccurs="0" maxOccurs="unbounded"></element>
    		<element name="dateDeNaissance" type="string" minOccurs="0" maxOccurs="1"></element>
    		<element name="nationalite" type="string" minOccurs="1"></element>
    		<element name="manuscrits" type="ybst:Livre" minOccurs="1" maxOccurs="unbounded"></element>
    	</sequence>
    </complexType>

    <complexType name="Editeur">
    	<sequence>
    		<element name="id" type="int" minOccurs="1"></element>
    		<element name="nom" type="string" minOccurs="1"></element>
    		<element name="adresse" type="string" minOccurs="1"></element>
    		<element name="livresEdites" type="ybst:Livre" minOccurs="1" maxOccurs="unbounded"></element>
    	</sequence>
    </complexType>
</schema>